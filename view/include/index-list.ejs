<style>
    .channel-h5 {
        background: #fff;
        border-bottom: 10px solid #f5f5f5;
        position: relative;
    }

    .channel-h5-header {
        padding: 10px 15px;
        border-bottom: 1px solid #f0f0f0;
        position: relative;
        font-size: 16px;
        line-height: 16px;
        font-family: "楷体";
    }

    .list-h5 {
        padding: 0 15px;
    }

    .list-h5 li::after {
        display: block;
        content: "";
        clear: both;
        overflow: hidden;
        height: 0px;
        visibility: hidden;
    }

    .list-h5 li {
        padding: 5px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .list-h5 li:last-child {
        border: none;
    }

    .list-h5 {
        overflow: hidden;
    }

    .book-h5-cover {
        float: left;
        position: relative;
        width: 50px;
        height: 70px;
        background-color: #fff;
        border: 1px solid #f0f0f0;
        border-radius: 1px;
        overflow: hidden;
    }

    .book-h5-cover img {
        width: 100%;
        height: 100%;
        border-radius: 1px;
    }

    .book-h5-finish {
        position: absolute;
        bottom: 0px;
        left: 0px;
        width: 100%;
        /* width: 50px; */
        color: #fff;
        padding: 5px 0px;
        text-align: center;
        font-family: arial;
        font-size: 14px;
        line-height: 14px;
        background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.3))
    }

    .book-h5-info {
        margin-left: 60px;
        padding-top: 2px;
        height: 70px;
        background: #fff;
    }

    .book-h5-title {
        margin-bottom: 4px;
        font-family: arial;
        font-size: 16px;
        line-height: 16px;
        color: #000;
        overflow: hidden;
        text-overflow: ellipsis;
        font-weight: 600;

    }

    .book-h5-wrap {
        margin: 10px 0px;
        padding-top: 3px;
        overflow: hidden;
    }

    .book-h5-author {
        float: left;
        margin: -3px 5px 0 -3px;
        padding: 3px 5px;
        max-width: 6em;
        font: 15px/11px a;
        color: #999;
        overflow: hidden;

    }

    .book-h5-tag {
        float: left;
        margin: -3px 5px 0 -3px;
        padding: 3px 5px;
        max-width: 6em;
        font: 15px/11px a;
        color: #999;
        overflow: hidden;
    }
</style>

<section class="channel-h5">
    <div class="channel-h5-header">端脑列表</div>
    <ul class="list-h5">
        <li>
            <div class="book-h5">
                <div class="book-h5-cover">
                    <img src="img/book/1.jpg" />
                    <!-- <p class="book-h5-finish">完结</p> -->
                </div>

                <div class="book-h5-info">
                    <p class="book-h5-title">书名</p>
                    <div class="book-h5-wrap">
                        <span class="book-h5-author">作者</span>
                        <span class="book-h5-tag"> 标签</span>
                    </div>
                </div>
            </div>
        </li>

    </ul>

</section>